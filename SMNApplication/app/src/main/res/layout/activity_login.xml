<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/common_24_dp"
        android:layout_marginRight="@dimen/common_24_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_48_dp"
            android:background="@color/color_box"
            android:orientation="vertical"
            android:paddingBottom="@dimen/common_32_dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_60_dp"
                android:gravity="center_horizontal"
                android:text="@string/title_box_login"
                android:textSize="@dimen/h1" />

            <EditText
                android:id="@+id/edt_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_36_dp"
                android:layout_marginRight="@dimen/common_36_dp"
                android:layout_marginTop="@dimen/common_24_dp"
                android:background="@color/color_box_edittext"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:hint="@string/hint_username"
                android:inputType="textEmailAddress"
                android:padding="@dimen/common_10_dp" />

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_36_dp"
                android:layout_marginRight="@dimen/common_36_dp"
                android:layout_marginTop="@dimen/common_16_dp"
                android:background="@color/color_box_edittext"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:padding="@dimen/common_10_dp" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_36_dp"
                android:layout_marginRight="@dimen/common_36_dp"
                android:layout_marginTop="@dimen/common_16_dp"
                android:background="@color/colorPrimary"
                android:padding="@dimen/common_10_dp"
                android:text="@string/login"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- ImageView icon -->
        <ImageView
            android:layout_width="@dimen/common_96_dp"
            android:layout_height="@dimen/common_96_dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_man" />
    </RelativeLayout>

</RelativeLayout>